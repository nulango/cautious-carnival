[
{%- for post in itemsList %}
    {
    "icon": "{{ post.data.icon }}",
    "title": "{{ post.data.title }}",
    "description": "{{ post.data.description }}",
    "coverImage": "{{ post.data.coverImage }}",
    "coverSmall": "{{ post.data.coverSmall }}",
    "coverPreview": "{{ post.data.coverPreview }}",
    "date": "{{ post.data.pubDate | date: 'yyyy-MM-DD HH:mm' }}",
    "link": "{{ post.url | url }}"
    }{% if post != itemsList.last %},{% endif %}
{%- endfor %}
]
